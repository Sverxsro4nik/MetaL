block content
    mixin about(title, text='')
            .text__part
                h3= title
                if text !== ''
                    p= text
    include ../../components/logo/logo.pug
    .grid__wrapper
        .input__part
            .left__part
                .component__wrapper
                    +about('text field', 'default')
                    include ../../components/input/input.pug
                .component__wrapper
                    +about('text field', 'hover/focus')
                    include ../../components/input/input.pug
                .component__wrapper
                    +about('dropdown')
                    include ../../components/select/select.pug
                .component__wrapper
                    +about('masked text field')
                    include ../../components/input/input.pug
                .component__wrapper
                    +about('date dropdown')
                    include ../../components/date__dropdown/date__drop
                .component__wrapper
                    +about('filter date dropdown')
                    include ../../components/filter__date/filter__date
                .component__wrapper
                    +about('subscribe text field')
                    include ../../components/subscribe/subscribe
            .center__part
                .component__wrapper
                    +about('checkbox buttons')
                    include ../../components/checkbox/checkbox
                    include ../../components/checkbox/checkbox
                    include ../../components/checkbox/checkbox
                .component__wrapper
                    +about('radio buttons')
                    include ../../components/radio/radio
                    include ../../components/radio/radio
                .component__wrapper
                    +about('toggle')
                    include ../../components/toggle/toggle
                    include ../../components/toggle/toggle
                .component__wrapper
                    +about('like button')
                    include ../../components/like/like
                    include ../../components/like/like
                .component__wrapper
                    +about('rate button')
